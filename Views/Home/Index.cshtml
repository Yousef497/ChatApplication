@model IEnumerable<Chat>

<div class="chat-body">

    <div class="chat-rooms">

        @foreach (var chat in Model)
        {
            <a class="room-btn" asp-controller="Home"
               asp-action="JoinRoom" asp-route-id="@chat.Id">

                @chat.Name
            </a>
        }

    </div>

</div>

